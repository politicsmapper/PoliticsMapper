extends layout

block head
	link(rel='stylesheet', href='/bootstrap/css/bootstrap.min.css')
	link(rel='stylesheet', href='/bootstrap/css/bootstrap-responsive.min.css')
	link(rel='stylesheet', href='/stylesheets/style.css')
	script(src='/bootstrap/js/bootstrap.min.js')
	link(rel='stylesheet', href='../UserInterface/css/stylish-portfolio.css')
	link(rel='stylesheet', href='../UserInterface/font-awesome/css/font-awesome.min.css')
	link(rel='stylesheet', href='../UserInterface/css/search.css')

block content
	#results.container
		.well.well-sm
			| <strong>#{type} results for: #{query}</strong>
			.btn-group
				a#list.btn.btn-default.btn-sm(href='#')
				span.glyphicon.glyphicon-th-list
					| List
				a#grid.btn.btn-default.btn-sm(href='#')
				span.glyphicon.glyphicon-th
					| Grid

		#products.row.list-group
			for hit in hits
				.item.col-xs-4.col-lg-4
					.thumbnail
						.caption
							.row
								.col-xs-12.col-md-7
									h4.group.inner.list-group-item-heading
										| #{hit._source.speakername}
								.col-xs-12.col-md-5
									p.lead(align='right')
										| #{hit._source.date}
							p.group.inner.list-group-item-text
								| #{hit._source.content}
							.row
								.col-xs-12.col-md-offset-4.col-md-4
									a.btn.btn-success.btn-block(href='#') View
									a.btn.btn-info.btn-block(href='/similar/' + encodeURIComponent(hit._id)) Similar



// block comment
					a(href='/similar/' + encodeURIComponent(hit._id))
						b #{hit._source.date}
					p #{hit._source.content}
// block